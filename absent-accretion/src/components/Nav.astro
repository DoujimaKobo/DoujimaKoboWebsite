---
const links = [
  { href: '/', label: 'Home' },
  { href: '/novels', label: 'Novels' },
  { href: '/illustrations', label: 'Illustrations' },
  { href: '/dolls', label: 'Dolls' },
  { href: '/cg', label: 'CG' }
];
---
<nav>
  <ul>
    {links.map(link => (
      <li><a href={link.href}>{link.label}</a></li>
    ))}
  </ul>
</nav>

<style>
  nav ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 1rem;
  }
  nav a {
    text-decoration: none;
    color: inherit;
  }
</style>
